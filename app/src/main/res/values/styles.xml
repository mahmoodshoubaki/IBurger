<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
</style>
    <style name="custom_text_style" parent="TextAppearance.AppCompat.Menu">
        <item name="itemTextAppearance"> @style/TextAppearance.AppCompat.Body1 </item>
        <item name="itemTextColor">@color/dark_gray</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>
